{
  "name": "lightning-pool",
  "description": "Fastest generic Pool written with TypeScript",
  "version": "4.3.0",
  "author": "Panates Ltd.",
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "license": "MIT",
  "repository": "panates/lightning-pool",
  "keywords": [
    "pool",
    "generic",
    "generic-pool"
  ],
  "dependencies": {
    "doublylinked": "^2.5.4",
    "putil-promisify": "^1.10.1"
  },
  "devDependencies": {
    "@panates/eslint-config": "^1.0.9",
    "@panates/eslint-config-ts": "^1.0.9",
    "@panates/tsconfig": "^1.0.9",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "npm-run-path": "^5.3.0",
    "prettier": "^3.3.3",
    "ts-cleanup": "^0.3.2",
    "ts-jest": "^29.2.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "type": "module",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "files": [
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "clean": "npm run clean:src && npm run clean:dist",
    "clean:dist": "rimraf build coverage",
    "clean:src": "ts-cleanup -s src --all | ts-cleanup -s test",
    "prebuild": "npm run clean:dist && npm run lint",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "npm run postbuild:copyfiles && node ./support/postbuild.cjs",
    "postbuild:copyfiles": "cp ./support/package.cjs.json ./build/cjs/package.json && cp LICENSE README.md ./build",
    "test": "jest --runInBand --detectOpenHandles",
    "precover": "rimraf coverage",
    "cover": "jest --maxWorkers=1 --coverage",
    "precitest": "rimraf coverage",
    "citest": "jest --coverage --coverageReporters=lcov"
  }
}
